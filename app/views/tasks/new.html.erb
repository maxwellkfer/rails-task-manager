<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, "Name of task : " %>
    <%= f.text_field :title, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :details, "Details of task : " %>
    <%= f.text_field :details, class: 'form-control'  %>
   </div>

  <%= f.submit "Create a task",  class: 'btn btn-primary' %>
<% end %>
<p><%= link_to "<= back", tasks_path %></p>
